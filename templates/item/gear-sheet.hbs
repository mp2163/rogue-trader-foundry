<form class="{{cssClass}} rogue-trader-sheet item-sheet gear-sheet" autocomplete="off">
  {{!-- Header --}}
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="item-name">
        <input name="name" type="text" value="{{item.name}}" placeholder="Item Name" />
      </h1>
    </div>
  </header>

  {{!-- Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="stats">{{localize "ROGUE_TRADER.Stats"}}</a>
    <a class="item" data-tab="description">{{localize "ROGUE_TRADER.Description"}}</a>
  </nav>

  {{!-- Body --}}
  <section class="sheet-body">
    {{!-- Stats Tab --}}
    <div class="tab stats" data-group="primary" data-tab="stats">
      <div class="gear-stats">
        <div class="form-group">
          <label>{{localize "ROGUE_TRADER.Quantity"}}</label>
          <input type="number" name="system.quantity" value="{{system.quantity}}" data-dtype="Number" min="0" />
        </div>

        <div class="form-group">
          <label>{{localize "ROGUE_TRADER.Weight"}}</label>
          <input type="number" name="system.weight" value="{{system.weight}}" data-dtype="Number" min="0" step="0.1" />
          <p class="hint">Weight per item in kg</p>
        </div>

        <div class="form-group">
          <label>{{localize "ROGUE_TRADER.TotalWeight"}}</label>
          <span class="total-weight">{{totalWeight}} kg</span>
        </div>

        <div class="form-group">
          <label>{{localize "ROGUE_TRADER.GearNotes"}}</label>
          <input type="text" name="system.notes" value="{{system.notes}}" placeholder="Additional notes..." />
        </div>
      </div>
    </div>

    {{!-- Description Tab --}}
    <div class="tab description" data-group="primary" data-tab="description">
      <div class="editor-container">
        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>
